<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td><%= image_tag @user.get_profile_image(30,30) %></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @books.title %></td>
          <td><%= @books.body %></td>
          <% if @books.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@books), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@books), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
