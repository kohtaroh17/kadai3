<table class="table table-user">
  <thead>
    <%= image_tag @user.get_profile_image(100,100) %>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th colspan="2">
        <%= link_to edit_user_path(user), class:"btn btn-default btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      </th>
    </tr>
  </tbody>
</table>